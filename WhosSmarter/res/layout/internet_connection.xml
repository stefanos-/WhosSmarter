<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bgdialog"
    android:padding="30dp" >

    <Button
        android:id="@+id/localQuest"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wifi"
        android:layout_marginTop="19dp"
        android:background="@drawable/dialogselector"
        android:padding="13dp"
        android:text="Locally stored questions"
        android:gravity = "right"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <Button
        android:id="@+id/wifi"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/localQuest"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/localQuest"
        android:background="@drawable/dialogselector"
        android:padding="13dp"
        android:textSize="15dp"
        android:text="Wi-Fi settings"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wifi"
        android:layout_alignLeft="@+id/wifi"
        android:layout_margin="2dp"
        android:layout_marginLeft="14dp"
        android:padding="4dp"
        android:src="@drawable/icon_dialog3" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/localQuest"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_margin="2dp"
        android:padding="4dp"
        android:src="@drawable/icon_dialog3" />

</RelativeLayout>